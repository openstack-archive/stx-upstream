From 1abe8722d6bfc94fba75a42c113cc70079a088aa Mon Sep 17 00:00:00 2001
From: Gerry Kopec <gerry.kopec@windriver.com>
Date: Wed, 15 Aug 2018 01:04:39 +0000
Subject: [PATCH 2/5] Libvirt: Enable containers to look at files/directories
 on host

libvirt:
- /etc/nova/instances directory
---
 libvirt/templates/daemonset-libvirt.yaml | 5 +++++
 1 file changed, 5 insertions(+)

diff --git a/libvirt/templates/daemonset-libvirt.yaml b/libvirt/templates/daemonset-libvirt.yaml
index 229d574..415b95e 100644
--- a/libvirt/templates/daemonset-libvirt.yaml
+++ b/libvirt/templates/daemonset-libvirt.yaml
@@ -168,6 +168,8 @@ spec:
             - name: machine-id
               mountPath: /etc/machine-id
               readOnly: true
+            - name: etc-nova-instances
+              mountPath: /etc/nova/instances
             {{- if .Values.conf.ceph.enabled }}
             - name: etcceph
               mountPath: /etc/ceph
@@ -226,6 +228,9 @@ spec:
         - name: machine-id
           hostPath:
             path: /etc/machine-id
+        - name: etc-nova-instances
+          hostPath:
+            path: /etc/nova/instances
         - name: etc-libvirt-qemu
           hostPath:
             path: /etc/libvirt/qemu
